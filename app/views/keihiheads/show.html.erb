<%= javascript_include_tag 'keihi' %>
<%= javascript_include_tag 'keihis' %>
<%= stylesheet_link_tag 'keihis' %>

<ol class="breadcrumb">
  <li><%= link_to 'メニュー', main_path %></li>
  <li><%= link_to 'カレンダー', events_path %></li>
  <li><%= link_to '経費・新規', new_keihihead_path %></li>
  <li class="active">経費・承認要求</li>
</ol>

<%= form_for @keihi, html: {class:'form-inline'} do |f| %>

    <!--header-->
    <div class="form-group">
      <% name =  User.find(session[:user]).name %>
      <%= label_tag 'label1','起票者:　' << name << '　' %>
    </div>

    <div class="form-group">
      <div class="editor-datetime">
        <%= label_tag 'label2','日付:'%>
        <%= f.text_field :日付, class: 'form-control', size: 10 %>
        <%= button_tag '>', id: 'search-shinshei', type: 'button', class: 'btn' %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag 'label2','申請No:'%>
      <%# f.select :shinsheino,[''], {class: 'form-control'} %>
      <%array_value = [@keihi.id , @keihi.id] %>
      <%= select(:keihihead, :id, array_value, {}, {class: 'form-control'}) %>
      <%# f.text_field :shinsheino, class: 'form-control' %>
    </div>

    <div class="spacer"></div>

    <!--body-->
    <div class="editor-datetime">

      <table id="keihi-table-show" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
        <thead>
        <tr>
          <th rowspan="2">日付</th>
          <th rowspan="2">相手先名</th>

          <th colspan="6">　旅　費　交　通　費　</th>

          <th rowspan="2">その他</th>
          <th rowspan="2">JobNo</th>
          <th rowspan="2">備考</th>
          <th rowspan="2">領収書</th>
        </tr>
        <tr>
          <th>機関名</th>
          <th>発</th>
          <th>着</th>
          <th>交通費</th>
          <th>日当</th>
          <th>宿泊</th>
        </tr>
        </thead>
        <tbody>
        <% @keihi.keihibodys.each do |body| %>
            <tr>
              <td><%= body.日付 %></td>
              <td><%= body.相手先 %></td>
              <td><%= body.機関名 %></td>
              <td><%= body.発 %></td>
              <td><%= body.着 %></td>
              <td><%= body.交通費 %></td>
              <td><%= body.日当 %></td>
              <td><%= body.宿泊費 %></td>
              <td><%= body.その他 %></td>
              <td><%= body.JOB %></td>
              <td><%= body.備考 %></td>
              <td><%= body.領収書kubun %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>

    <!--footer-->

    <div class="spacer"></div>
    <div class="form-group">
      <%= f.label '小　計' %>
      <%= f.text_field :交通費合計, size:2, class: 'form-control' %>
      <%= f.text_field :日当合計, size:2, class: 'form-control' %>
      <%= f.text_field :宿泊費合計, size:2, class: 'form-control' %>
      <%= f.text_field :その他合計, size:2, class: 'form-control' %>
      <%= f.label :仮払金, class:'akaji' %>
      <%= f.text_field :仮払金, size:2, class: 'form-control' %>
    </div><br>
    <div class="form-group">
      <%= f.label :旅費交通費合計 %>
      <%= f.text_field :旅費合計, size:2, class: 'form-control' %>
      <%= f.label :支給品, class:'akaji' %>
      <%= f.text_field :支給品, size:2, class: 'form-control' %>
      <%= f.label :過不足 %>
      <%= f.text_field :過不足, size:2, class: 'form-control' %>
    </div><br>
    <div class="form-group">
      <%= f.label '経　費　合　計' %>
      <%= f.text_field :合計, size:2, class: 'form-control' %>
      <%= f.check_box :承認kubun %>
      <%= f.label :承認要求 %>
      <%= f.label :承認 %>
      <%= f.text_field_search :承認者,{}, size:2, class_field: 'shonin', class_search: 'shonin-search' %>

      <div class="editor-datetime">
        <%= f.label :清算予定日 %>
        <%= f.text_field :清算予定日, size:6, class: 'form-control' %>
      </div>
    </div>

<% end %>