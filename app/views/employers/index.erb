<h1>マルティセレクト（複数選択）</h1>
<%= form_for @employer, url: employers_path, html:{'data-model' => 'employer'}, remote: true, method: 'post' do |f| %>
<div class="col-md-3 col-md-offset-2"> </div>
<div class="btn-group" role="group" aria-label="...">
  <button id="add_new_employer" type="button" class="btn btn-default">　
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>　
  </button>
  <button type="submit" class="btn btn-default" name="multidelete">　
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>　
  </button>
</div>


<table id="multiselect_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th><%= check_box_tag "delete_all", 1 %></th>
    <th>Name</th>
    <th>Position</th>
    <th>Office</th>
    <th>Age</th>
    <th>Start date</th>
    <th>Salary</th>
    <th></th>
  </tr>
  </thead>

  <tfoot>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Position</th>
    <th>Office</th>
    <th>Age</th>
    <th>Start date</th>
    <th>Salary</th>
    <th></th>
  </tr>
  </tfoot>

  <tbody>
  <% @employers.each do |employer| %>
      <%= render partial: 'table_row', locals: {employer: employer} %>
  <% end %>
  </tbody>
</table>


<%# link_to 'New Person', '#new_person_modal', 'data-toggle' => 'modal' %>

<%# Bootstrap modal markup. @see: http://getbootstrap.com/javascript/#modals %>
<div class="modal fade" id="new_employer_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">追加情報入力</h4>
      </div>
      <div class="modal-body">
        <%# Render the new person form (passing modal => true to enable remote => true) %>
         <%# render 'modal_form' %>
        <%# Added Bootstrap classes, and help-block container for error messages %>
        <div class="form-group">
          <%= f.label :お名前, class: 'control-label' %><br>
          <%= f.text_field :first_name, class: 'form-control' %>
          <span class="help-block"></span>
        </div>

        <%# Added Bootstrap classes, and help-block container for error messages %>
        <div class="form-group">
          <%= f.label :位置, class: 'control-label' %><br>
          <%= f.text_field :position, class: 'form-control' %>
          <span class="help-block"></span>
        </div>

        <%# Added Bootstrap classes, and help-block container for error messages %>
        <div class="form-group">
          <%= f.label :オフィス, class: 'control-label' %><br>
          <%= f.text_field :office, class: 'form-control' %>
          <span class="help-block"></span>
        </div>

        <%# Added Bootstrap classes, and help-block container for error messages %>
        <div class="form-group">
          <%= f.label :年齢, class: 'control-label' %><br>
          <%= f.text_field :age, class: 'form-control' %>
          <span class="help-block"></span>
        </div>

        <%# Added Bootstrap classes, and help-block container for error messages %>
        <div class="form-group">
          <%= f.label :開始日, class: 'control-label' %><br>
          <%= f.text_field :start_date, class: 'form-control' %>
          <span class="help-block"></span>
        </div>

        <%# Added Bootstrap classes, and help-block container for error messages %>
        <div class="form-group">
          <%= f.label :給料, class: 'control-label' %><br>
          <%= f.text_field :salary, class: 'form-control' %>
          <span class="help-block"></span>
        </div>

        <div>
          <%= f.hidden_field :id %>
        </div>
        <%# Added Bootstrap classes %>
        <div class="actions">
          <%= f.submit '更新', class: 'btn btn-default', name: 'add' %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
    <input type="hidden" id="clicked_index" name="clicked_index"/>
<% end %>

