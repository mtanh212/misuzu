<div class="col-md-4 col-md-offset-4">
  <h3><%= t 'app.login.let_login' %></h3>
</div>
<div class="col-md-4 col-md-offset-4">
<div class="well">

<%= form_for :session, url: login_path, html:{class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :担当者コード, class: 'col-md-4 control-label' %>
      <div class="col-md-8">
        <%= f.text_field :担当者コード, class: 'form-control', placeholder: 'ID', autocomplete: 'off' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :password, class: 'col-md-4 control-label' %>
      <div class="col-md-8">
        <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード', autocomplete: 'off' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8 col-md-offset-4">
      <%= f.submit 'ログイン', class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
   
  </div>
</div>
