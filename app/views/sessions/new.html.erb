<div class="col-md-4 col-md-offset-4">
  <h3><%= t 'app.login.let_login' %></h3>
</div>
<div class="col-md-4 col-md-offset-4">
<div class="well">

<%= form_for :session, url: login_path, html:{class: 'form-horizontal'}  do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :担当者コード, class: 'col-md-4 control-label' %>
      <div class="col-md-8">
        <%= f.text_field :担当者コード, class: 'form-control', placeholder: 'ID' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :password, class: 'col-md-4 control-label' %>
      <div class="col-md-8">
        <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :remember_me, class: "col-md-8 control-label" do %>
        <%= f.check_box :remember_me %>
        <span><%= t :remember_me %></span>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8 col-md-offset-4">
      <%= f.submit 'ログイン', class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
    <!--<div class="col-md-8 col-md-offset-5">-->
    <div class="pull-right">
        <%= link_to '新規登録', new_user_path %>
        <%# link_to 'パスワード更新', change_pass_users_path %>
    </div>

  </div>
</div>
